<Page
  x:Class="MileXamlBlankAppNetFrameworkNativeBackend.MainPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="using:MileXamlBlankAppNetFrameworkNativeBackend"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Background="{StaticResource ControlFillColorDefaultBrush}"
  mc:Ignorable="d">

  <!--
    Due to issues in Visual Studio, XAML Intellisense with WUX/.NET 8 only works
    when all namespaces are declared by hand, including Windows.UI.Xaml.*
  -->
  <StackPanel
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Orientation="Vertical">
    <TextBlock Style="{StaticResource DisplayTextBlockStyle}" Text="Mile.Xaml ❤ .NET Framework" />
    <TextBlock Text="{x:Bind FrameworkDescription}" />
    <TextBlock>Native Backend</TextBlock>
    <Button Click="Button_Click">Click Me</Button>
  </StackPanel>
</Page>
