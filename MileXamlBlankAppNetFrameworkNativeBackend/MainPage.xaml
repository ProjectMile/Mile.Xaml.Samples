<wuxc:Page
  x:Class="MileXamlBlankAppNetFrameworkNativeBackend.MainPage"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="using:MileXamlBlankAppNetFrameworkNativeBackend"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:wux="using:Windows.UI.Xaml"
  xmlns:wuxc="using:Windows.UI.Xaml.Controls"
  xmlns:wuxd="using:Windows.UI.Xaml.Documents"
  Background="{StaticResource ControlFillColorDefaultBrush}"
  mc:Ignorable="d">

  <!--
    Due to issues in Visual Studio, XAML Intellisense with WUX/.NET 8 only works
    when all namespaces are declared by hand, including Windows.UI.Xaml.*
  -->
  <wuxc:StackPanel
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    Orientation="Vertical">
    <wuxc:TextBlock Style="{StaticResource DisplayTextBlockStyle}" Text="Mile.Xaml Native Backend ❤ .NET Framework" />
    <wuxc:TextBlock Text="{x:Bind FrameworkDescription}" />
    <wuxc:TextBlock>
      <wuxd:Run>IsDynamicCodeSupported:false</wuxd:Run>
    </wuxc:TextBlock>
    <wuxc:Button Click="Button_Click">Click Me</wuxc:Button>
  </wuxc:StackPanel>
</wuxc:Page>
