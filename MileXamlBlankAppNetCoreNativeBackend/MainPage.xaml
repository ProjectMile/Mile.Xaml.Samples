<Page
    x:Class="MileXamlBlankAppNetCore.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MileXamlBlankAppNetCore"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{StaticResource ControlFillColorDefaultBrush}"
    mc:Ignorable="d">

    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Vertical">
        <TextBlock
            Style="{StaticResource DisplayTextBlockStyle}"
            Text="Mile.Xaml ❤ .NET"
            TextAlignment="Center" />
        <TextBlock Text="{x:Bind FrameworkDescription}"/>
        <TextBlock>
            <Run>IsDynamicCodeSupported:</Run>
            <Run Text="{x:Bind IsDynamicCodeSupported}" />
        </TextBlock>
        <TextBlock>Native Backend</TextBlock>
        <Button Click="Button_Click">Click Me</Button>
  </StackPanel>
</Page>
